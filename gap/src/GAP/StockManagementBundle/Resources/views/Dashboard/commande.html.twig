{% extends "GAPStockManagementBundle::layout.html.twig" %}
{% block body %}
    <div class="wrapper">

        <header class="main-header">               
            <nav class="navbar navbar-static-top" style="margin-left: 0px;">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a href="{{ path('gap.dashboard_home') }}" class="navbar-brand"><b>GAP </b><small>gestion de stock automatisé</small></a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">{{ app.user.username }}</a></li>
                            <li>
                                <a href="{{ path('logout') }}">Deconnexion</a>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Right side column. Contains the navbar and content of the page -->

        <div class="content-wrapper" style="margin-left: 0px;">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Ecran des commandes
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content" style="padding-top: 0px; margin: 15px 15px 0px 15px;">
                <!-- Main row -->
                <div class="row">
                    <!-- Left col -->

                    <!-- Commandes -->
                    <div class="box box-primary">
                        <div class="box-header">
                            <i class="glyphicon glyphicon-shopping-cart"></i>
                            <h3 class="box-title">Ecran des commandes en cours d'affectation</h3>
                        </div>
                        <div class="row">
                            <div class="box-body">
                                <div class="col-xs-12">
                                  <div class="box">

                                    <div class="box-body table-responsive no-padding">
                                      <table class="table table-hover">
                                        <tbody><tr>
                                          <th>ID</th>
                                          <th>Service</th>
                                          <th>Molecule</th>
                                          <th>Dosage</th>
                                          <th>Quantité</th>
                                          <th>Description</th>
                                          <th></th>
                                          <th></th>
                                        </tr>
                                        {% for commande in listCommandes %}
                                            {% if commande.user == NULL %}
                                                <tr>
                                                  <td>{{ commande.id  }}</td>
                                                  <td>{{ commande.service.nom }}</td>
                                                  <td>{{ commande.dosage }}</td>
                                                  <td>{{ commande.molecule.nomMol }}</td>
                                                  <td>{{ commande.quantite }}</td>
                                                  <td>{{ commande.description }}</td>
                                                  <td></td>
                                                  <td><a href="{{ path('gap.affecter', {'id': commande.id}) }}" class="btn btn-default btn-sm" data-toggle="collapse" data-target="#navbar-collapse">
                                                      Affecter
                                                      </a>
                                                  </td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}

                                      </tbody></table>
                                    </div><!-- /.box-body -->
                                  </div><!-- /.box -->
                                </div>
                            </div><!-- /.box-body -->
                         </div>
                    </div>
                </div>

            </section><!-- right col -->
        </div><!-- /.row (main row) -->

    </div><!-- /.content-wrapper -->
    <footer class="main-footer" style="margin-left: 0;">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.0
        </div>
        <strong>Copyright &copy; 2015-2016 <a href="http://Mydev.fr">My dev'</a>.</strong> Tous droit reservés.
    </footer>
</div><!-- ./wrapper -->
{% endblock %}
