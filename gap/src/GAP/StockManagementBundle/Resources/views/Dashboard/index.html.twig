{% extends "GAPStockManagementBundle::layout.html.twig" %}
{% block body %}
    <div class="wrapper">

        <header class="main-header">               
            <nav class="navbar navbar-static-top" style="margin-left: 0px;">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a href="{{ path('dashboard_home') }}" class="navbar-brand"><b>GAP </b><small>gestion de stock automatisé</small></a>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                            <i class="fa fa-bars"></i>
                        </button>
                    </div>

                    <!-- Collect the nav links, forms, and other content for toggling -->
                    <div class="collapse navbar-collapse" id="navbar-collapse">

                        <ul class="nav navbar-nav navbar-right">
                            <li><a href="#">{{ app.user.username }}</a></li>
                            <li>
                                <a href="{{ path('logout') }}">Deconnexion</a>
                            </li>
                        </ul>
                    </div><!-- /.navbar-collapse -->
                </div><!-- /.container-fluid -->
            </nav>
        </header>
        <!-- Right side column. Contains the navbar and content of the page -->

        <div class="content-wrapper" style="margin-left: 0px;">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
                    Ecran d'accueil
                </h1>
                <ol class="breadcrumb">
                    <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
                    <li class="active">Dashboard</li>
                </ol>
            </section>

            <!-- Main content -->
            <section class="content" style="padding-top: 0px; margin: 15px 15px 0px 15px;">
                <!-- Main row -->
                <div class="row">
                    <!-- Left col -->

                    <!-- Commandes -->
                    <div class="box box-primary">
                        <div class="box-header">
                            <i class="glyphicon glyphicon-shopping-cart"></i>
                            <h3 class="box-title">Ecran des commandes</h3>
                        </div>
                        <div class="row">
                            <div class="col-sm-6 col-xs-10">
                                <div class="box-body">
                                    <div class="box box-solid box-primary">
                                        <div class="box-header">
                                            <h3 class="box-title">Commande en attente </h3>
                                            <h4><a class="pull-right" href="{{ path('gap.commande') }}">Voir détails</a></h4>
                                        </div>
                                        <div class="box-body overflow">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tbody>
                                                        <tr>

                                                            <th>
                                                                ID
                                                            </th>
                                                            <th>
                                                                Service
                                                            </th>
                                                            <th>
                                                                Molecule
                                                            </th>
                                                            <th>
                                                                Dosage
                                                            </th>
                                                            <th>
                                                                Quantité
                                                            </th>
                                                            <th></th>
                                                        </tr>
                                                        {% for commande in listCommandes %}
                                                        <tr>

                                                            <td>{{ commande.id }}</td>
                                                            <td>{{ commande.service.nom }}</td>
                                                            <td>{{ commande.molecule.nomMol }}</td>
                                                            <td>{{ commande.dosage }}</td>
                                                            <td>{{ commande.quantite }}</td>


                                                        </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div><!-- /.box-body -->

                                        <div class="box-footer">
                                        </div><!-- /.box-footer-->
                                    </div><!-- /.box -->
                                </div><!-- /.box-body -->
                            </div>
                            <div class="col-sm-6 col-xs-10">
                                <div class="box-body">
                                    <div class="box box-solid box-primary">
                                        <div class="box-header">
                                            <h3 class="box-title .col-xs-12 .col-md-8">Vos commande en cours  </h3>
                                            <h4><a class="pull-right" href="{{ path('gap.your.commande') }}">Voir détails</a></h4>
                                        </div>
                                        <div class="box-body overflow">
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tbody>
                                                        <tr>
                                                            <th>
                                                                ID
                                                            </th>
                                                            <th>
                                                                Service
                                                            </th>
                                                            <th>
                                                                Molecule
                                                            </th>
                                                            <th>
                                                                Dosage
                                                            </th>
                                                            <th>
                                                                Quantité
                                                            </th>
                                                            <th></th>
                                                        </tr>
                                                        {% for commande in listYourCommandes %}
                                                            <tr>

                                                                <td>{{ commande.id }}</td>
                                                                <td>{{ commande.service.nom }}</td>
                                                                <td>{{ commande.molecule.nomMol }}</td>
                                                                <td>{{ commande.dosage }}</td>
                                                                <td>{{ commande.quantite }}</td>
                                                                <td><a href="#" class="details" data-toggle="modal" data-target="#CommandeModal" data-id="1" > Voir details </a></td>
                                                            </tr>
                                                        {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div><!-- /.box-body -->
                                        <div class="box-footer">
                                        </div><!-- /.box-footer-->
                                    </div><!-- /.box -->
                                </div><!-- /.box-body -->
                            </div>
                        </div>
                    </div>
                    <section class="col-xs-7 ">
                        <!-- Commande Rapide -->
                        <div class="box box-info">
                            <div class="box-header">
                                <i class="glyphicon glyphicon-briefcase"></i>
                                <h3 class="box-title">Commande Rapide</h3>
                            </div>
                            <div class="box-body">
                                {% for message in app.session.flashbag.get('notice') %}
                                    <p>{{ message }}</p>
                                {% endfor %}
                                {{ form_start(form) }}
                                    <div class="form-group">
                                    {{ form_label(form.service) }}
                                    {{ form_widget(form.service, {'attr': {'class' : 'form-control'}}) }}
                                    </div>
                                    <div class="form-group">
                                    {{ form_label(form.molecule) }}
                                    {{ form_widget(form.molecule, {'attr': {'class' : 'form-control'}}) }}
                                    </div>
                                    <div class="form-group col-xs-6">
                                    {{ form_label(form.dosage) }}
                                    {{ form_widget(form.dosage, {'attr': {'class' : 'form-control'}}) }}
                                    </div>
                                    <div class="form-group col-xs-6">
                                    {{ form_label(form.quantite) }}
                                    {{ form_widget(form.quantite, {'attr': {'class' : 'form-control'}}) }}
                                    </div>

                                    <div class="form-group">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description, {'attr': {'class' : 'form-control'}}) }}
                                    </div>
                                    <div class="box-footer clearfix">
                                        {{ form_widget(form.envoyer, {'attr': {'class' : 'pull-right btn btn-default'}}) }}
                                    </div>
                                    {{ form_end(form) }}
                            </div>
                        </div>

                    </section><!-- /.Left col -->
                    <!-- right col-->
                    <section class="col-xs-5 ">

                        <!-- Alertes Stock -->
                        <div class="box box-default">
                            <div class="box-header with-border">
                                <i class="fa fa-warning"></i>
                                <h3 class="box-title">Alertes du stock</h3>
                            </div><!-- /.box-header -->
                            <div class="box-body">
                                <div class="box box-solid box-danger">
                                    <div class="box-header">
                                        <h3 class="box-title .col-xs-12 .col-md-8">Alerte Stock Critique  </h3>
                                    </div>
                                    <div class="box-body overflow">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                <tr>
                                                    <th>
                                                        Medicament
                                                    </th>
                                                    <th>
                                                        Stock
                                                    </th>
                                                    <th>
                                                        Stock Critique
                                                    </th>
                                                </tr>
                                                {% for alert in listAlert %}
                                                    {% if alert.quantite < alert.stockCritique  %}
                                                    <tr>

                                                        <td>
                                                            {{ alert.nomMed }}
                                                        </td>
                                                        <td>
                                                             {{ alert.quantite }}
                                                        </td>
                                                        <td>
                                                            {{ alert.stockCritique }}
                                                        </td>

                                                    </tr>
                                                    {% endif %}
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div><!-- /.box-body -->
                        </div>
                                <div class="box box-solid box-warning">
                                    <div class="box-header">
                                        <h3 class="box-title .col-xs-12 .col-md-8">Alerte Stock minimal  </h3>
                                    </div>
                                    <div class="box-body overflow">
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                <tr>
                                                    <th>
                                                        Medicament
                                                    </th>
                                                    <th>
                                                        Stock
                                                    </th>
                                                    <th>
                                                        Stock Minimal
                                                    </th>
                                                </tr>
                                                {% for alert in listAlert %}
                                                    {% if alert.quantite < alert.stockMini  %}
                                                        {% if alert.quantite > alert.stockCritique %}
                                                            <tr>

                                                                <td>
                                                                    {{ alert.nomMed }}
                                                                </td>
                                                                <td>
                                                                    {{ alert.quantite }}
                                                                </td>
                                                                <td>
                                                                    {{ alert.stockCritique }}
                                                                </td>
                                                            </tr>
                                                        {% endif %}
                                                    {% endif %}
                                                {% endfor %}
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                        <div class="box-body">

                        </div><!-- /.box-body -->
                </div><!-- /.box -->
            </section><!-- right col -->
        </div><!-- /.row (main row) -->

    </div><!-- /.content-wrapper -->
    <footer class="main-footer" style="margin-left: 0;">
        <div class="pull-right hidden-xs">
            <b>Version</b> 2.0
        </div>
        <strong>Copyright &copy; 2015-2016 <a href="http://Mydev.fr">My dev'</a>.</strong> Tous droit reservés.
    </footer>
</div><!-- ./wrapper -->
{% endblock %}
