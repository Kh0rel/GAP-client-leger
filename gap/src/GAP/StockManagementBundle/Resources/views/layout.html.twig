        <![endif]-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    </head>
    <body class="skin-blue">
        {% block body %}
            
        {% endblock %}
        
        {% include 'GAPStockManagementBundle:modal:modal.commande.html.twig' %}
        {% include 'GAPStockManagementBundle:modal:modal.alert.html.twig'  %}
        
        {% javascripts
            '@GAPStockManagementBundle/Resources/public/js/*/*'
        %}
        <script src="{{ asset_url }}"></script>
        <script>
            $(document).ready(function () {
                $(".details").click(function () {
                    var id = $(this).attr("data-id")


                    $.ajax({
                        type: "POST",
                        url: "{{ path('modal_commande')}}",
                        data: id,
                        cache: false,
                        success: function () {

                        }
                    });
                });
            })

        </script>
        {% endjavascripts %} 


    </body>
</html>